pipeline{

agent any

tools {
  maven 'maven3.9.9'
}



stages{

 stage('CheckOutCode'){
 steps{
 sendSlackNotifications('STARTED')
 git branch: 'development',  credentialsId: 'd0a78a56-5e2b-485b-b9b9-3778ee4c1441', url: 'https://github.com/pri12-hub/maven-web-application.git'  
 }
 
 stage('Build'){
 steps{
 sh "mvn clean package"
 }
 }
 
 stage('ExecuteSonarQubeReport'){
 steps{
 sh "mvn clean sonar:sonar"
 }
 }
 
 stage('UploadArtifactIntoNexus'){
 steps{
 sh "mvn clean deploy"
 }
 }

 stage('DeployAppIntoTomcat'){
 steps{
 sshagent(['141e31db-a3ff-404b-84a2-0492cd1a0e32']) {
 sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.1.113:/opt/apache-tomcat-9.0.102/webapps/"  
 }
 }
 }

}//stages closing
}//pipeline closing
def sendSlackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESS'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    colorName = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESS') {
    colorName = 'GREEN'
    colorCode = '#00FF00'
  } else {
    colorName = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary, channel: '#databankteam')
}


